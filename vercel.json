{
  "version": 2,
  "builds": [
    {
      "builds": [
        {
          "use": "@vercel/node",
          "config": {
            "includeFiles": ["server/**", "shared/**", "api/**"]
          }
        }
      ],
      "functions": {
        "api/index.ts": {                  // âœ… Fixed: Matches build source
          "maxDuration": 30
        }
      }
    }
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "VERCEL": "1"
  },
  "functions": {
    "api/index.ts": {
      "maxDuration": 30
    }
  }
}